# Maintainer: Terje Larsen <terlar@gmail.com>

_name=go-jira
pkgname="${_name}-git"
pkgver=0.1.0.12.g42e787e
pkgrel=1

pkgdesc="Simple jira command line client in Go"
url="http://github.com/Netflix-Skunkworks/${_name}"
license=('APACHE')
arch=('i686' 'x86_64')

depends=()
makedepends=('git')

provides=("${_name}")
conflicts=("${_name}")
source=("git+https://github.com/Netflix-Skunkworks/${_name}.git")
md5sums=("SKIP")

pkgver() {
	cd "${srcdir}/${_name}"
	git describe --tags | sed -e 's:v::' -e 's/-/./g'
}

build() {
	cd "${srcdir}/${_name}"

	msg "Run make"
	make
}

package() {
	msg "Make install"
	cd "${srcdir}/${_name}"

	msg "pkgdir: ${pkgdir}"
	make GOBIN="${pkgdir}/usr/bin" build
}
